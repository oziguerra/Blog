<!-- Header -->
<%- include("partials/header.ejs") %>

<!-- Body -->
<%- startingContent %>
    <% for(let i = 0; i < posts.length; i++) { %>
        <article>
            <h2><%= posts[i].title %></h2>
            <p>
              <%= posts[i].body.substring(0, 20) + "..." %>
              <a href="/posts/<%=posts[i].title%>"> Read more </a>
            </p>
        </article>
    <% } %>

<!-- Footer -->
<%- include("partials/footer.ejs") %>